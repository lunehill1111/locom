<% if logged_in? %>
  <header class="mb-4">
    <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
        <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">
          <img class="rounded img-fluid" src="<%= gravatar_url(current_user, { size: 50 }) %>" alt="">
        </a>
        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
          <% current_user.accounts.each do |account| %>
           <li class="dropdown-item">
              <%= link_to account.organization.name + account.organization.segment_name, accounts_show_path(account), class: 'nav-link' %>
           </li>
          <% end %>
          <div class="dropdown-divider"></div>
          <li class="dropdown-item"><%= link_to 'ログアウト', logout_path, method: :delete %></li>
        </div>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent">
        <span class="navbar-toggler-icon"></span>
      </button>
     <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav">
          <li class="nav-item"><%= link_to "探す",accounts_communicator_path(current_account), class: "nav-link" %></li>
          <li class="nav-item"><%= link_to "個人情報", edit_user_path(current_user), class: "nav-link" %></li>
          <li class="nav-item"><%= link_to "グループ管理", organizations_path, class: "nav-link" %></li>
        </ul>
     </div>
    </nav>
    
  </header>
<% else %>
  <header class="mb-4">
    <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
      <a class="navbar-brand" href="/">LoCoM</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent">
        <span class="navbar-toggler-icon"></span>
      </button>
  
      <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
        <ul class="navbar-nav">
          <li class="nav-item"><%= link_to '新規登録', signup_path, class: 'nav-link' %></li>
          <li class="nav-item"><%= link_to 'ログイン', login_path, class: 'nav-link' %></li>
        </ul>
      </div>
    </nav>
  </header>
<% end %>