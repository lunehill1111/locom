<div class="text-center">
  <h1>所属組織登録</h1>
</div>

<div class="row">
  <div class="col-sm-6 offset-sm-3">

    <%= form_with(model: @organization, local: true) do |f| %>
      
      <div class="form-group">
        <%= f.label :name, '会社名' %>
        <%= f.text_field :name, class: 'form-control' %>
      </div> 
      
      <div class="form-group">
        <%= f.label :segment_name, '部門名' %>
        <%= f.text_field :segment_name, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :prefecture, '都道府県' %>
        <%= f.text_field :prefecture, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :city, '市町村' %>
        <%= f.text_field :city, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :place, '町丁目' %>
        <%= f.text_field :place, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :building, 'ビル名等' %>
        <%= f.text_field :building, class: 'form-control' %>
      </div>
        

      <%= f.submit '登録', class: 'btn btn-primary btn-block' %>
    <% end %>
  </div>
</div>
